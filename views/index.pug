
head
	link(type="text/css", rel="stylesheet", href="style.css")
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
	script(type="text/javascript", src="/recipePage.js")

	
body
	h1 Choose recipe:
	form#mainForm
		
		select#recipeSelect(name="Recipes")
	
	button#recipeViewButton View
	button#recipeSubmitButton Submit
	form(action="/recipe", method="GET")
	label(for='recipeName') Name:
	br
	input#recipeName(name='recipeName')
	br
	label(for='recipeDuration') Duration:
	br
	input#recipeDuration(name='recipeDuration')
	br
	label(for='recipeIngredients') Ingredients:
	br
	textarea#recipeIngredients(name='recipeName' cols = 50 rows=10)
	br
	label(for='recipeDirections') Directions:
	br
	textarea#recipeDirections(name='recipeDirections' cols=50 rows=10)
	br
	p#confirmed